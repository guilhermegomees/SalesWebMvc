@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create new Seller";
}

<h3>@ViewData["Title"]</h3>

<hr/>

<form asp-action="Create">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Seller.Name" class="control-label"></label>
            <input asp-for="Seller.Name" class="form-control" placeholder="Enter the name"/>
            <span asp-validation-for="Seller.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Seller.Email" class="control-label"></label>
            <input asp-for="Seller.Email" class="form-control" placeholder="Enter the email"/>
            <span asp-validation-for="Seller.Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Seller.BirthDate" class="control-label">Birth Date</label>
            <input asp-for="Seller.BirthDate" class="form-control" placeholder="BirthDate"/>
            <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Seller.BaseSalary" class="control-label">Base Salary</label>
            <input asp-for="Seller.BaseSalary" class="form-control" placeholder="Enter the base salary"/>
            <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Seller.DepartmentId" class="control-label"></label>
            <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
        </div>
        <div class="form-group col-md-4 btn-margin">
            <input type="submit" value="Create" class="btn btn-success btn-margin"/>
        </div>
     </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}