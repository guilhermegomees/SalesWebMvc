@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Create new Seller";
}

<h3>@ViewData["Title"]</h3>

<hr/>

<form asp-action="Create">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter the name"/>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter the email"/>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="BirthDate" class="control-label">Birth Date</label>
            <input asp-for="BirthDate" class="form-control" placeholder="BirthDate"/>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="BaseSalary" class="control-label">Base Salary</label>
            <input asp-for="BaseSalary" class="form-control" placeholder="Enter the base salary"/>
        </div>
        <div class="form-group col-md-4 btn-margin">
            <input type="submit" value="Create" class="btn btn-success btn-margin"/>
        </div>
     </div>
</form>